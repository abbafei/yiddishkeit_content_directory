{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://yiddishkeit.info/schemas/items.schema.json",
    "definitions": {
        "tag_array": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        },
        "item_identifier": {
            "type": "string"
        },
        "url": {
            "type": "string",
            "format": "uri"
        },
        "language_code": {
            "type": "string"
        }
    },
    "type": "object",
    "additionalProperties": {
        "type": "object",
        "required": ["title"],
        "properties": {
            "id": {
                "$ref": "#/definitions/item_identifier"
            },
            "title": {
                "type": "string",
                "description": "human-readable name or title"
            },
            "main_category": {
                "type": "string",
                "description": "main category of the content"
            },
            "content_type": {
                "type": "string",
                "description": "media type of the content"
            },
            "site_id": {
                "$ref": "#/definitions/item_identifier"
            },
            "tags": {
                "$ref": "#/definitions/tag_array",
                "description": "categories of the content"
            },
            "fee": {
                "type": "array",
                "minItems": 1,
                "items": {
                    "type": "object",
                    "description": "describes whether there is a fee or not for the content, and other fee information (for example when does the fee apply)",
                    "required": ["has_fee"],
                    "properties": {
                        "has_fee": {
                            "type": "boolean",
                            "default": false
                        },
                        "description": {
                            "type": "string",
                            "description": "tells more about the fee entry in a human-readable way"
                        },
                        "until": {
                            "type": "string",
                            "format": "date-time",
                            "description": "the time the fee entry applies until"
                        }
                    }
                }
            },
            "target_audience": {
                "$ref": "#/definitions/tag_array",
                "description": "audiences that the content seems tailored to"
            },
            "announcements": {
                "type": "array",
                "description": "links for news articles pertaining to the item",
                "minItems": 1,
                "items": {"$ref": "#/definitions/url"}
            },
            "endpoints": {
                "type": "object",
                "description": "digital locations to access media of the item",
                "additionalProperties": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": ["ref"],
                        "properties": {
                            "ref": {
                                "type": "string",
                                "description": "identifier for the resource"
                            },
                            "label": {
                                "type": "string",
                                "description": "gives more information about the ref"
                            }
                        }
                    }
                }
            },
            "languages": {
                "type": "array",
                "description": "list of language code strings for the languages the content of the item is available in",
                "minItems": 1,
                "items": {"$ref": "#/definitions/language_code"}
            }
        }
    }
}
