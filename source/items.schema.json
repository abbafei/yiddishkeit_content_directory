{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://yiddishkeit.info/schemas/items.schema.json",
    "definitions": {
        "item_identifier": {
            "type": "string"
        },
        "url": {
            "type": "string",
            "format": "uri"
        },
        "language_code": {
            "type": "string"
        },
        "category": {
            "type": "string"
        },
        "target_audience": {
            "type": "string"
        },
        "container_type": {
            "type": "string"
        },
        "content_type": {
            "type": "string"
        },
        "endpoint_type": {
            "type": "string"
        },
        "media_type": {
            "type": "string"
        },
        "related_id_type": {
            "type": "string"
        }
    },
    "type": "object",
    "additionalProperties": {
        "type": "object",
        "required": ["title"],
        "propertyNames": {
            "$ref": "#/definitions/item_identifier"
        },
        "properties": {
            "title": {
                "type": "string",
                "description": "human-readable name or title"
            },
            "content_type": {
                "$ref": "#/definitions/content_type",
                "description": "type of the item entry"
            },
            "media_type": {
                "$ref": "#/definitions/media_type",
                "description": "media type of the content"
            },
            "container_type": {
                "type": "array",
                "description": "the type of technology that the item is accessed with",
                "minItems": 1,
                "items": {
                    "$ref": "#/definitions/container_type"
                }
            },
            "related_ids": {
                "type": "object",
                "propertyNames": {
                    "$ref": "#/definitions/related_id_type"
                },
                "additionalProperties": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/item_identifier"
                    }
                }
            },
            "tags": {
                "description": "categories of the content",
                "type": "array",
                "minItems": 1,
                "items": {
                    "$ref": "#/definitions/category"
                }
            },
            "main_category": {
                "$ref": "#/definitions/category",
                "description": "main category of the content"
            },
            "fee": {
                "type": "array",
                "minItems": 1,
                "items": {
                    "type": "object",
                    "description": "describes whether there is a fee or not for the content, and other fee information (for example when does the fee apply)",
                    "required": ["has_fee"],
                    "additionalProperties": false,
                    "properties": {
                        "has_fee": {
                            "type": "boolean",
                            "default": false
                        },
                        "description": {
                            "type": "string",
                            "description": "tells more about the fee entry in a human-readable way"
                        },
                        "until": {
                            "type": "string",
                            "format": "date-time",
                            "description": "the time the fee entry applies until"
                        }
                    }
                }
            },
            "target_audience": {
                "description": "audiences that the content seems tailored to",
                "type": "array",
                "minItems": 1,
                "items": {
                    "$ref": "#/definitions/target_audience"
                }
            },
            "announcements": {
                "type": "array",
                "description": "links for news articles pertaining to the item",
                "minItems": 1,
                "items": {"$ref": "#/definitions/url"}
            },
            "endpoints": {
                "type": "object",
                "description": "digital locations to access media of the item",
                "propertyNames": {
                    "$ref": "#/definitions/endpoint_type"
                },
                "additionalProperties": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": ["ref"],
                        "additionalProperties": false,
                        "properties": {
                            "ref": {
                                "type": "string",
                                "description": "identifier for the resource"
                            },
                            "label": {
                                "type": "string",
                                "description": "gives more information about the ref"
                            },
                            "url": {
                                "type": "string",
                                "description": "url of the resource, generated from ref"
                            }
                        }
                    }
                }
            },
            "languages": {
                "type": "array",
                "description": "list of language code strings for the languages the item is available in",
                "minItems": 1,
                "default": ["en"],
                "items": {
                    "$ref": "#/definitions/language_code"
                }
            }
        }
    }
}
