{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://yiddishkeit.info/schemas/items.schema.json",
    "definitions": {
        "types": {
            "categories": {
                "type": "string"
            },
            "container_types": {
                "type": "string"
            },
            "content_types": {
                "type": "string"
            },
            "endpoints": {
                "type": "string"
            },
            "media_types": {
                "type": "string"
            },
            "related_id_types": {
                "type": "string"
            },
            "target_audiences": {
                "type": "string"
            }
        },
        "item_identifier": {
            "type": "string"
        },
        "url": {
            "type": "string",
            "format": "uri"
        },
        "language_code": {
            "type": "string"
        }
    },
    "type": "object",
    "propertyNames": {
        "$ref": "#/definitions/item_identifier"
    },
    "additionalProperties": {
        "type": "object",
        "required": ["title"],
        "additionalProperties": false,
        "properties": {
            "title": {
                "type": "string",
                "description": "human-readable name or title"
            },
            "source_subtitle": {
                "type": "string",
                "description": "subtitle of the item (taken from its source)"
            },
            "source_description": {
                "type": "string",
                "description": "description of the item (taken from its source)"
            },
            "summary": {
                "type": "string",
                "description": "a summary of the item"
            },
            "content_type": {
                "$ref": "#/definitions/types/content_types",
                "description": "type of the item entry"
            },
            "media_type": {
                "$ref": "#/definitions/types/media_types",
                "description": "media type of the content"
            },
            "container_type": {
                "type": "array",
                "description": "the type of technology that the item is accessed with",
                "minItems": 1,
                "items": {
                    "$ref": "#/definitions/types/container_types"
                }
            },
            "tags": {
                "description": "categories of the content",
                "type": "array",
                "minItems": 1,
                "items": {
                    "$ref": "#/definitions/types/categories"
                }
            },
            "main_category": {
                "$ref": "#/definitions/types/categories",
                "description": "main category of the content"
            },
            "main_url": {
                "$ref": "#/definitions/url",
                "description": "primary url of the item"
            },
            "target_audience": {
                "description": "audiences that the content seems tailored to",
                "type": "array",
                "minItems": 1,
                "items": {
                    "$ref": "#/definitions/types/target_audiences"
                }
            },
            "announcements": {
                "type": "array",
                "description": "links for news articles pertaining to the item",
                "minItems": 1,
                "items": {"$ref": "#/definitions/url"}
            },
            "languages": {
                "type": "array",
                "description": "list of language code strings for the languages the item is available in",
                "minItems": 1,
                "default": ["en"],
                "items": {
                    "$ref": "#/definitions/language_code"
                }
            },
            "related_ids": {
                "type": "object",
                "propertyNames": {
                    "$ref": "#/definitions/types/related_id_types"
                },
                "additionalProperties": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/item_identifier"
                    }
                }
            },
            "fee": {
                "type": "array",
                "minItems": 1,
                "items": {
                    "type": "object",
                    "description": "describes whether there is a fee or not for the content, and other fee information (for example when does the fee apply)",
                    "required": ["has_fee"],
                    "additionalProperties": false,
                    "properties": {
                        "has_fee": {
                            "type": "boolean",
                            "default": false
                        },
                        "description": {
                            "type": "string",
                            "description": "tells more about the fee entry in a human-readable way"
                        },
                        "until": {
                            "type": "string",
                            "format": "date-time",
                            "description": "the time the fee entry applies until"
                        }
                    }
                }
            },
            "endpoints": {
                "type": "object",
                "description": "digital locations to access media of the item",
                "propertyNames": {
                    "$ref": "#/definitions/types/endpoints"
                },
                "additionalProperties": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": ["ref"],
                        "additionalProperties": false,
                        "properties": {
                            "ref": {
                                "type": "string",
                                "description": "identifier value for the resource"
                            },
                            "label": {
                                "type": "string",
                                "description": "gives more information about the ref"
                            },
                            "is_main_url": {
                                "type": "boolean",
                                "description": "whether this is a main url or not"
                            },
                            "url": {
                                "type": "string",
                                "description": "url of the resource, generated from ref"
                            }
                        }
                    }
                }
            }
        }
    }
}
