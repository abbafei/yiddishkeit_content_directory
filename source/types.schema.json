{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://yiddishkeit.info/schemas/items.schema.json",
    "definitions": {
		"category_identifier": {
			"type": "string"
		}
    },
    "type": "object",
    "properties": {
        "endpoints": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": ["formatter"],
                "additionalProperties": false,
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "formatter": {
                        "type": "string",
                        "pattern": "\\$1"
                    },
                    "third_party_content": {
                        "type": "boolean",
                        "description": "whether content can be added to this endpoint type by parties who do not own the item"
                    },
					"wikidata": {
						"type": "string",
						"pattern": "P\\d+",
						"description": "Wikidata property for this endpoint type"
					}
                }
            }
        },
		"categories": {
            "type": "object",
            "additionalProperties": {
				"type": "object",
				"additionalProperties": false,
				"propertyNames": {
					"$ref": "#/definitions/category_identifier"
				},
				"properties": {
					"title": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},
					"parent": {
						"$ref": "#/definitions/category_identifier",
						"description": "category that this category is a subcategory (a.k.a. child, or part) of"
					}
				}
			}
		}
    },
    "additionalProperties": {
        "type": "object",
        "description": "types names (keys) and infos (values) for a type",
        "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        }
    }
}

